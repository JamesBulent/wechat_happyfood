/**index.wxss**/
swiper {
  height: 120px;
}
.slideImg {
  width: 100%;
  height: 100%;
}
.productBox {
  width: 100%;
  flex-wrap: wrap;
  border-top: 15rpx solid #eee;
  
}
.flex {
  display: flex;
}
.productItem {
  width: 50%;
  height: 360rpx;
  box-sizing: border-box;
  border-left: 15rpx solid #eee;
  border-bottom: 15rpx solid #eee;
  text-align: center;
  position: relative;
  
}
.productItem:nth-of-type(odd) {
   border-left: none;
}
.productImg {
  width:260rpx;
  height: 260rpx;
  display: block;
  margin: 0 auto;
}
.GoodsName {
  display: block;
  margin: 0 auto;
  font-size: 30rpx;
  width: 200rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.GoodsPrice {
  font-size: 30rpx;
  display: block;
  color: red;
}
.addCart {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 40rpx;
  height: 40rpx;
}

