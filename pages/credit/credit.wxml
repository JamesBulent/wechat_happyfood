<!--index.wxml-->

<view class="container">
  <form bindsubmit='submit'>
     <view class="item flex">

        <label>收货人：</label><input name="username" value="{{username}}" placeholder='请输入您的姓名' type='text'></input>
     </view>

     <view class="item flex">
        <label>手机号码：</label><input name="tel" value="{{tel}}" placeholder='请输入您的手机号' type='tet'></input>
     </view>

     <view class="item flex">
        <label>邮政编码：</label><input name="postalcode" value="{{postalcode}}" placeholder='请输入邮政编码' type='text'></input>
     </view>

     <view class="item flex last">
        <label>地址：</label><input name="address" value="{{address}}" placeholder='请输入地址' type='text'></input>
     </view>

      <view>
        <button  class="save" form-type='submit'>保存</button>
      </view>
    
  </form>
</view>

