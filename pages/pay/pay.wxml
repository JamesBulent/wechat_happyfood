
<view class="container">

    <form bindsubmit="bindSave">

    <view class="form-box">

        <view class="row-wrap">

            <view class="label">支付金额</view>

            <view class="label-right">

                <text name="amount" class="input" type="text">{{totalPrice}}</text>

            </view>

      </view>

    </view>

    <button type="warn" class="save-btn" bindtap="submit">立即支付</button>

    <button type="default" class="cancel-btn" bindtap="cancel">取消</button>

    </form>

</view>
